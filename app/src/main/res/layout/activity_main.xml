<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    tools:context=".MainActivity">


<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#935FD5"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="English Language"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:textSize="20sp"
                android:layout_marginLeft="20dp"/>

<!--            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/sounds"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                app:tint="#FFFF" />-->

        </LinearLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="582dp"
            android:columnCount="3">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/hello"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:layout_margin="5dp"
                android:backgroundTint="#367CFF"
                android:onClick="caraBaca"
                android:text="Hello"
                app:cornerRadius="12dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/hi"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_row="0"
                android:layout_rowWeight="1"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:layout_margin="5dp"
                android:backgroundTint="#D86DE5"
                android:onClick="caraBaca"
                android:text="hi"
                app:cornerRadius="12dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/goodbye"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:layout_margin="5dp"
                android:backgroundTint="#FF6DB2"
                android:onClick="caraBaca"
                android:text="Goodbye"
                app:cornerRadius="12dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/please"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:layout_margin="5dp"
                android:backgroundTint="#FF937E"
                android:onClick="caraBaca"
                android:text="please"
                app:cornerRadius="12dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/yes"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:layout_margin="5dp"
                android:backgroundTint="#FFC75F"
                android:onClick="caraBaca"
                android:text="yes"
                android:textColor="#402C09"
                app:cornerRadius="12dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/no"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:layout_margin="5dp"
                android:backgroundTint="#F9F871"
                android:onClick="caraBaca"
                android:text="no"
                android:textColor="#353508"
                app:cornerRadius="12dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/bye"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:layout_margin="5dp"
                android:backgroundTint="#736EEB"
                android:onClick="caraBaca"
                android:text="bye"
                app:cornerRadius="12dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/cheers"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:layout_margin="5dp"
                android:backgroundTint="#935FD5"
                android:onClick="caraBaca"
                android:text="cheers"
                app:cornerRadius="12dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/thank_you"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:layout_margin="5dp"
                android:backgroundTint="#A651BD"
                android:onClick="caraBaca"
                android:text="thank &#10;you"
                app:cornerRadius="12dp" />

            <!--               <com.google.android.material.button.MaterialButton
                               android:id="@+id/excuse_me"
                               android:layout_width="wrap_content"
                               android:layout_height="100dp"
                               android:layout_rowWeight="1"
                               android:layout_columnWeight="1"
                               android:layout_gravity="fill"
                               android:layout_margin="5dp"
                               android:backgroundTint="#B145A4"
                               android:onClick="caraBaca"
                               android:text="excuse &#10;me"
                               app:cornerRadius="12dp" />-->


        </GridLayout>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>